{
  "name": "frontend-assignment",
  "version": "1.0.0",
  "description": "A small assignment with webpack, jest, eslint, scss and vanilla js",
  "main": "src/index.js",
  "scripts": {
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:unit:integration": "jest tests/",
    "test:unit:integration:coverage": "jest --coverage",
    "test:functional:open": "cypress open",
    "test:functional:run": "cypress run",
    "start": "webpack-dev-server --config webpack.dev.js --open",
    "dev": "webpack --config webpack.dev.js",
    "prod": "webpack --config webpack.prod.js",
    "serve": "(cd dist && python -m SimpleHTTPServer ${PORT:-7777})",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "author": "Adam Gegotek <a.gegotek@tekmi.nl>",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.7.6",
    "es6-promise": "^4.2.8",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.6",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.0",
    "css-loader": "^3.3.0",
    "cypress": "^3.8.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.17.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.9.0",
    "jest-fetch-mock": "^2.1.2",
    "node-sass": "^4.13.1",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.1",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0",
    "webpack-merge": "^4.2.2"
  },
  "jest": {
    "automock": false,
    "setupFiles": [
      "./.jest/setupJest.js"
    ],
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/.jest/jsTransform.js",
      "^.+\\.css$": "<rootDir>/.jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/.jest/fileTransform.js"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/",
      "<rootDir>/src/",
      "<rootDir>/public/",
      "<rootDir>/tests/functional/"
    ],
    "coverageReporters": [
      "text"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/polyfills.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "browserslist": [
    "defaults"
  ]
}
